@page "/allempp"

@using DB

@inject IDataService DataService




@if (datas == null)
{


    <p><em>Loading...</em></p>
}
else
{

    <div class="container" align="center" style="color: wheat;">
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <button class="btn btn-success">اظهار</button>
                    <button class="btn btn-info">طباعه</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">name</th>
                            <th scope="col">phone</th>
                            <th scope="col">phone2</th>
                            <th scope="col">address</th>
                            <th scope="col">id</th>
                            <th scope="col">jop</th>
                            <th scope="col">salary</th>
                            <th scope="col">holiday</th>
                 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in datas)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.empname</td>
                                <td>@item.empphone</td>
                                <td>@item.empphone2</td>
                                <td>@item.empaddress</td>
                                <td>@item.empid</td>
                                <td>@item.empjoptype</td>
                                <td>@item.empsalary</td>
                                <td>@item.empholiday</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}












@code {
    IEnumerable<Data> datas;

    protected override async Task OnInitializedAsync()
    {
        datas = await DataService.GetData();
    }
}
